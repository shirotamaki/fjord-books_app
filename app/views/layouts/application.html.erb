<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert alert-danger"><%= alert %></p>
  <% end %>
  <p class="navbar-text pull-right">
    <% if user_signed_in? %>
      <%= t('views.layouts.Logged_in_as') %><strong><%= current_user.email %></strong>.
      <%= link_to t('views.layouts.User_show'), user_path(current_user), class: 'navbar-link' %> |
      <%= link_to t('views.layouts.Edit_profile'), edit_user_registration_path, class: 'navbar-link' %> |
      <%= link_to t('views.layouts.User_list'), users_path, class: 'navbar-link' %> |
      <%= link_to t('views.layouts.Logout'), destroy_user_session_path, method: :delete, class: 'navbar-link'  %>
    <% else %>
      <%= link_to t('views.layouts.Sign_up'), new_user_registration_path, class: 'navbar-link' %> |
      <%= link_to t('views.layouts.Login'), new_user_session_path, class: 'navbar-link' %>
    <% end %>
  </p>
    <%= yield %>
  </body>
</html>
